<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:padding="3dp">

    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="450dp">

        <TextView
            android:id="@+id/cardview_text_header"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="De'Peresto" />

        <ImageView android:id="@+id/cardview_img_content"
            android:layout_below="@id/cardview_text_header"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="5dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="10dp"
            android:layout_below="@id/cardview_img_content"
            android:id="@+id/cardview_img_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />

        <TextView
            android:layout_below="@id/cardview_img_content"
            android:id="@+id/cardview_name_profile"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="16dp"
            android:layout_toRightOf="@id/cardview_img_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"/>

        <TextView android:id="@+id/cardview_date_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/cardview_img_profile"
            android:layout_below="@id/cardview_name_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="Saturday, 2 July 2016 / 16:30"/>

        <TextView android:id="@+id/card_etLike"
            android:textSize="12dp"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/cardview_date_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="6 People Likes this"/>

        <ImageButton android:id="@+id/card_btnLike"
            android:layout_margin="10dp"
            android:background="@drawable/ic_star_border_black_18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
