<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:padding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout android:id="@+id/ll_gambar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView android:id="@+id/cardProfile_Background"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="10dp"
            android:id="@+id/cardviewProfile_img_profile"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_marginLeft="50dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/cardProfile_Nama"
            android:layout_toRightOf="@id/cardviewProfile_img_profile"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:layout_below="@id/ll_gambar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Radhika Yusuf"/>

        <LinearLayout
            android:layout_margin="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <Button android:id="@+id/cardProfile_btn_Location"
                android:background="@drawable/ic_add_location_black_24dp"
                android:layout_marginRight="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />
            <Button android:id="@+id/btnHome"
                android:background="@drawable/ic_home_black_24dp"
                android:layout_marginRight="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />
        </LinearLayout>
    </RelativeLayout>



</android.support.v7.widget.CardView>
