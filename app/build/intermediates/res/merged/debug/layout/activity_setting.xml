<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/senjata"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/senjata"
    tools:context="com.foodspot.root.myapp.SettingActivity">


        <RelativeLayout
            android:id="@+id/rl_card"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <LinearLayout android:id="@+id/ll_gambar_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView android:id="@+id/setting_bg"
                    android:src="@drawable/common_plus_signin_btn_text_dark_normal"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop" />


            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/setting_dp"
                android:layout_alignRight="@+id/linearLayout"
                android:layout_alignEnd="@+id/linearLayout"
                android:src="@android:color/black"
                android:id="@+id/view" />


            <ImageButton
                android:background="@drawable/ic_photo_camera_white_24dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignTop="@+id/view"
                android:layout_alignLeft="@+id/view"
                android:layout_alignStart="@+id/view"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="10dp"
                android:id="@+id/setting_dp"
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:layout_marginLeft="50dp"
                android:scaleType="centerCrop"
                android:src="@color/senjata"/>


            <ImageButton
                android:background="@drawable/ic_photo_camera_black_24dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/setting_nama"
                android:layout_alignRight="@+id/setting_dp"
                android:layout_alignEnd="@+id/setting_dp" />

            <EditText
                android:id="@+id/setting_nama"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/setting_dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:layout_below="@id/ll_gambar_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Radhika Yusuf"/>

            <LinearLayout
                android:layout_margin="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:id="@+id/linearLayout">
                    />
            </LinearLayout>
        </RelativeLayout>

    <Button
        android:id="@+id/btnSaveSetting"
        android:layout_below="@id/rl_card"
        android:layout_marginTop="20dp"
        android:text="Save change name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText android:id="@+id/status"
        android:visibility="gone"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText android:id="@+id/noHp"
        android:visibility="gone"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/status"/>


    <View android:id="@+id/garis1"
        android:layout_marginTop="20dp"
        android:layout_below="@id/btnSaveSetting"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"/>

    <LinearLayout android:id="@+id/linearUpdateLocation"
        android:background="#fff"
        android:layout_marginTop="20dp"
        android:layout_below="@id/garis1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_refresh_black_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perbaharui Lokasi"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="10dp"/>

    </LinearLayout>

    <!--<Button-->
        <!--android:layout_marginTop="50dp"-->
        <!--android:text="Save"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentBottom="true"/>-->

</RelativeLayout>
</ScrollView>